generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?
  orders    Order[]
}

model Product {
  id        String   @id @default(cuid())
  name      String
  price     Float
  image     String
  category  String
  createdAt DateTime @default(now())
}

model Order {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  products  Json
  total     Float
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

